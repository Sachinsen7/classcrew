{
  "name": "class-crew-backend",
  "version": "1.0.0",
  "description": "Backend for the Class Crew application",
  "main": "src/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node src/index.js",
    "start:prod": "cross-env NODE_ENV=production node src/index.js",
    "dev": "nodemon --watch src --exec node src/index.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "test": "jest --runInBand",
    "format": "prettier --write .",
    "docker:start": "docker-compose up --build",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.9",
